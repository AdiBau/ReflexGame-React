{
  "extends": [
    "eslint:recommended",
     "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "shared-node-browser": true,
    "commonjs": true,
    "browser" : true,
    "node" : true,
    "es6" : true,
    "jquery": true
  },
  "rules": {
    "indent": [
      "error",
      "tab"
    ],
    "no-console": 2 ,
    "no-undef" : 2
  },
  "ecmaFeatures": {
    "modules": true,
    "spread" : true,
    "restParams" : true
  }
}